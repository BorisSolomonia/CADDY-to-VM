:80 {
  log {
    output stdout
    format console
    level INFO
  }

  # simple health for the LB / you
  @health path /health
  respond @health "OK" 200

  # bring in per-app routes
  import /etc/caddy/conf.d/*.caddy

  encode gzip zstd
  header {
    -Server
    X-Content-Type-Options nosniff
    X-Frame-Options DENY
    Referrer-Policy "strict-origin-when-cross-origin"
  }
}